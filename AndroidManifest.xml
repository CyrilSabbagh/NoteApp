<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cyrilsabbagh.noteapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.cyrilsabbagh.noteapp.MainActivity"
            android:label="@string/app_name" 
            android:screenOrientation="landscape">	<!-- application only runs in horizontal mode -->
           
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cyrilsabbagh.noteapp.HotCornersActivity"
            android:label="@string/title_activity_hot_corners"
            android:windowSoftInputMode="adjustResize"	 
            android:screenOrientation="landscape">	<!-- bottom buttons go up when keyboard present -->
        </activity>

       <!--  <meta-data android:name="com.google.android.gms.version"
           android:value="@integer/google_play_services_version" /> -->

    </application>

</manifest>
